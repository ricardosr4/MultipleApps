<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".calculator.Calculator">

    <TextView
        android:id="@+id/tvNumberOne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="10dp"
        android:hint="0"
        android:textSize="50sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvNumberTwo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="10dp"
        android:hint="0"
        android:textSize="50sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvNumberOne" />

    <Button
        android:id="@+id/btnReset"
        android:layout_width="270dp"
        android:layout_height="95dp"
        android:onClick="presionarDigito"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:text="C"
        android:textSize="40sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvNumberTwo" />

    <Button
        android:id="@+id/btnDividir"
        android:layout_width="95dp"
        android:layout_height="95dp"
        android:onClick="clicOperacion"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="10dp"
        android:gravity="center"
        android:text="/"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvNumberTwo" />

    <Button
        android:id="@+id/btnMultiplicar"
        android:layout_width="95dp"
        android:layout_height="95dp"
        android:onClick="clicOperacion"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:gravity="center"
        android:text="X"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnDividir" />

    <Button
        android:id="@+id/btnRestar"
        android:layout_width="95dp"
        android:layout_height="95dp"
        android:onClick="clicOperacion"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:gravity="center"
        android:text="-"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnMultiplicar" />

    <Button
        android:id="@+id/btnSumar"
        android:layout_width="95dp"
        android:layout_height="95dp"
        android:layout_marginTop="10dp"
        android:onClick="clicOperacion"
        android:layout_marginEnd="10dp"
        android:gravity="center"
        android:text="+"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnRestar" />

    <Button
        android:id="@+id/btnResultado"
        android:layout_width="95dp"
        android:layout_height="95dp"
        android:layout_marginTop="10dp"
        android:onClick="clicOperacion"
        android:layout_marginEnd="10dp"
        android:gravity="center"
        android:text="="
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnSumar" />

    <Button
        android:id="@+id/btn1"
        android:layout_width="95dp"
        android:layout_height="95dp"
        android:onClick="presionarDigito"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:text="1"
        android:textSize="40sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnReset" />

    <Button
        android:id="@+id/btn2"
        android:layout_width="95dp"
        android:layout_height="95dp"
        android:layout_marginStart="3dp"
        android:layout_marginTop="10dp"
        android:onClick="presionarDigito"
        android:text="2"
        android:textSize="40sp"
        app:layout_constraintStart_toEndOf="@id/btn1"
        app:layout_constraintTop_toBottomOf="@id/btnReset" />

    <Button
        android:id="@+id/btn3"
        android:layout_width="95dp"
        android:layout_height="95dp"
        android:layout_marginStart="3dp"
        android:layout_marginTop="10dp"
        android:onClick="presionarDigito"
        android:text="3"
        android:textSize="40sp"
        app:layout_constraintStart_toEndOf="@id/btn2"
        app:layout_constraintTop_toBottomOf="@id/btnReset" />

    <Button
        android:id="@+id/btn4"
        android:layout_width="95dp"
        android:layout_height="95dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:text="4"
        android:onClick="presionarDigito"
        android:textSize="40sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn1" />

    <Button
        android:id="@+id/btn5"
        android:layout_width="95dp"
        android:layout_height="95dp"
        android:layout_marginStart="3dp"
        android:layout_marginTop="10dp"
        android:text="5"
        android:onClick="presionarDigito"
        android:textSize="40sp"
        app:layout_constraintStart_toEndOf="@id/btn1"
        app:layout_constraintTop_toBottomOf="@id/btn2" />

    <Button
        android:id="@+id/btn6"
        android:layout_width="95dp"
        android:layout_height="95dp"
        android:layout_marginStart="3dp"
        android:layout_marginTop="10dp"
        android:text="6"
        android:onClick="presionarDigito"
        android:textSize="40sp"
        app:layout_constraintStart_toEndOf="@id/btn2"
        app:layout_constraintTop_toBottomOf="@id/btn3" />

    <Button
        android:id="@+id/btn7"
        android:layout_width="95dp"
        android:layout_height="95dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:text="7"
        android:onClick="presionarDigito"
        android:textSize="40sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn4" />

    <Button
        android:id="@+id/btn8"
        android:layout_width="95dp"
        android:layout_height="95dp"
        android:layout_marginStart="3dp"
        android:layout_marginTop="10dp"
        android:text="8"
        android:onClick="presionarDigito"
        android:textSize="40sp"
        app:layout_constraintStart_toEndOf="@id/btn1"
        app:layout_constraintTop_toBottomOf="@id/btn5" />

    <Button
        android:id="@+id/btn9"
        android:layout_width="95dp"
        android:layout_height="95dp"
        android:layout_marginStart="3dp"
        android:layout_marginTop="10dp"
        android:text="9"
        android:onClick="presionarDigito"
        android:textSize="40sp"
        app:layout_constraintStart_toEndOf="@id/btn2"
        app:layout_constraintTop_toBottomOf="@id/btn6" />

    <Button
        android:id="@+id/btnPunto"
        android:layout_width="95dp"
        android:layout_height="95dp"
        android:layout_marginStart="3dp"
        android:layout_marginTop="10dp"
        android:text="."
        android:onClick="presionarDigito"
        android:textSize="40sp"
        app:layout_constraintStart_toEndOf="@id/btn2"
        app:layout_constraintTop_toBottomOf="@id/btn9" />

    <Button
        android:id="@+id/btn0"
        android:layout_width="187dp"
        android:layout_height="95dp"
        android:layout_marginStart="3dp"
        android:layout_marginTop="10dp"
        android:text="0"
        android:onClick="presionarDigito"
        android:textSize="40sp"
        app:layout_constraintStart_toStartOf="@id/btn7"
        app:layout_constraintTop_toBottomOf="@id/btn7" />


</androidx.constraintlayout.widget.ConstraintLayout>